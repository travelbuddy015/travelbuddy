<html>

<head>
    <%- include('layouts/header.ejs'); -%>
        <style>
            .package-item {
                box-shadow: 0 0 45px rgba(0, 0, 0, .08);
            }

            .package-item img {
                transition: .5s;
            }

            .package-item:hover img {
                transform: scale(1.1);
            }
        </style>
</head>

<body>

    <%- include('layouts/navbar.ejs'); -%>

        <div class="container rounded bg-white mt-2 mb-5">
            <div class="row">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img
                            class="rounded-circle mt-5" width="150px"
                            src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span
                            class="font-weight-bold">
                            <%= user.name %>
                        </span><span class="text-black-50">
                            <%= user.username %>
                        </span><span> </span></div>
                </div>
                <div class="col-md-9 border-right">
                    <div class="p-3 py-5">
                        <!-- Package Start -->
                        <div class="container-xxl py-5">
                            <div class="container">
                                <div class="text-center wow fadeInUp">
                                    <h6 class="section-title bg-white text-center text-primary px-3">Trips</h6>
                                    <h1 class="mb-5">Your Itineraries</h1>
                                </div>
                                <div class="row g-4 justify-content-center">
                                    <% if (!user.trips.length) { %>
                                        <p>No Trip To Display</p>
                                        <% } %>
                                            <% for (var i=0; i <user.trips.length; i++ ) { %>
                                                <div class="col-lg-4 col-md-6 wow fadeInUp">
                                                    <div class="package-item">

                                                        <div class="overflow-hidden">
                                                            <img class="img-fluid" src="img/package-1.jpg" alt="">
                                                        </div>
                                                        <div class="d-flex border-bottom">
                                                            <small class="flex-fill text-center border-end py-2"><i
                                                                    class="fa fa-map-marker-alt  me-2"></i>
                                                                <%= user.trips[i].destination %>
                                                            </small>
                                                            <small class="flex-fill text-center border-end py-2"><i
                                                                    class="fa fa-calendar-alt  me-2"></i>
                                                                <% const s_dateObj=new Date(user.trips[i].startdate) %>
                                                                    <% const e_dateObj=new Date(user.trips[i].enddate)
                                                                        %>
                                                                        <% const
                                                                            days=e_dateObj.getDate()-s_dateObj.getDate()
                                                                            %>
                                                                            <%= days %> Days
                                                            </small>
                                                            <small class="flex-fill text-center py-2"><i
                                                                    class="fa fa-user  me-2"></i>
                                                                <%= user.trips[i].members %> Person
                                                            </small>
                                                        </div>
                                                        <div class="text-center p-4">
                                                            <!-- price -->
                                                            <!-- <h3 class="mb-0">$149.00</h3> -->
                                                            <div class="mb-3">
                                                                <% if (user.trips[i].rating) { %>
                                                                    <% for( let index=0; index < user.trips[i].rating;
                                                                        index++ ) { %>

                                                                        <small class="fa fa-star text-primary"></small>
                                                                        <% } %>

                                                                            <% } %>

                                                            </div>
                                                            <p>
                                                                <%= days %> Day Trip to <%= user.trips[i].destination %>
                                                                        from
                                                                        <%= user.trips[i].source %>
                                                            </p>
                                                            <div class="d-flex justify-content-center mb-2">
                                                                <a href="#"
                                                                    class="btn btn-sm btn-danger px-3 border-end"
                                                                    style="border-radius: 30px 0 0 30px;"
                                                                    onclick="confirmDelete('<%= user.trips[i]._id %>');">Delete
                                                                    Trip</a>
                                                                <a href="#" class="btn btn-sm btn-primary px-3"
                                                                    style="border-radius: 0 30px 30px 0;">View Trip</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        </div>

        <%- include('layouts/footer.ejs') %>
            <script>
                function confirmDelete(tripId) {
                    if (confirm("Are you sure you want to delete this trip?")) {
                        window.location.href = "/deletetrip/" + tripId;
                    }
                }
            </script>
</body>

</html>